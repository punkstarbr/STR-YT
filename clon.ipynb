#!/usr/bin/env python3
"""
üé¨ Dublagem com Clonagem de Voz - Ubuntu Linux (root)
Usa XTTS-v2 (Coqui TTS) para clonar a voz do v√≠deo original
"""

# =========================
# 1Ô∏è‚É£ Instalar depend√™ncias
# =========================
import subprocess, sys

def run(cmd):
    subprocess.run(cmd, shell=True, check=True)

print("üì¶ Instalando depend√™ncias...")
run("apt-get update -qq && apt-get install -y ffmpeg")
run(f"{sys.executable} -m pip install -q "
    "openai-whisper "
    "transformers "
    "torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cpu "
    "yt-dlp "
    "TTS "          # Coqui TTS com XTTS-v2
    "nest_asyncio "
    "pydub "
    "scipy "
    "numpy"
)

# =========================
# 2Ô∏è‚É£ Configurar v√≠deo
# =========================
VIDEO_URL = "https://www.youtube.com/shorts/hkYHycm5Ai4"  # ‚Üê altere aqui
DOWNLOAD_DIR = "/tmp/yt_download"
OUTPUT_DIR = "/tmp/dub_output"

import os, re
os.makedirs(DOWNLOAD_DIR, exist_ok=True)
os.makedirs(OUTPUT_DIR, exist_ok=True)

# =========================
# 3Ô∏è‚É£ Baixar v√≠deo
# =========================
from yt_dlp import YoutubeDL

ydl_opts = {
    "format": "bestvideo+bestaudio/best",
    "outtmpl": f"{DOWNLOAD_DIR}/%(id)s.%(ext)s",
    "merge_output_format": "mp4",
    "quiet": True,
    "noplaylist": True,
}

print("üì• Baixando v√≠deo...")
with YoutubeDL(ydl_opts) as ydl:
    info = ydl.extract_info(VIDEO_URL, download=True)

video_id = info["id"]
video_file = f"{DOWNLOAD_DIR}/{video_id}.mp4"
video_title = info.get("title", "video_dublado")
video_title_clean = re.sub(r'[\\/*?:"<>|]', "", video_title)
output_video = f"{OUTPUT_DIR}/{video_title_clean}_dubbed_pt.mp4"

print(f"‚úÖ V√≠deo baixado: {video_file}")

# =========================
# 4Ô∏è‚É£ Extrair √°udio completo (para refer√™ncia de voz)
# =========================
audio_full = f"{OUTPUT_DIR}/audio_full.wav"
audio_16k  = f"{OUTPUT_DIR}/audio_16k.wav"

print("üîä Extraindo √°udio...")
# √Åudio completo em alta qualidade para clonagem de voz (22050 Hz, mono)
run(f'ffmpeg -y -i "{video_file}" -vn -ac 1 -ar 22050 "{audio_full}"')
# √Åudio em 16 kHz para Whisper
run(f'ffmpeg -y -i "{video_file}" -vn -ac 1 -ar 16000 "{audio_16k}"')

# =========================
# 5Ô∏è‚É£ Extrair trecho limpo da voz para clonagem
# =========================
# Pega os primeiros 6 segundos (ajuste conforme necess√°rio)
# XTTS-v2 precisa de 3-10 seg de √°udio de refer√™ncia
CLONE_REF_START = 0    # segundos
CLONE_REF_DUR   = 6    # segundos
clone_ref_audio = f"{OUTPUT_DIR}/clone_reference.wav"

run(f'ffmpeg -y -i "{audio_full}" -ss {CLONE_REF_START} -t {CLONE_REF_DUR} '
    f'-ac 1 -ar 22050 "{clone_ref_audio}"')
print(f"üéôÔ∏è √Åudio de refer√™ncia para clonagem: {clone_ref_audio}")

# =========================
# 6Ô∏è‚É£ Transcrever com Whisper
# =========================
import whisper

print("üß† Carregando Whisper (base)...")
model_whisper = whisper.load_model("base")

print("üé§ Transcrevendo...")
result = model_whisper.transcribe(audio_16k, language=None)  # auto-detecta idioma
transcript  = result["text"].strip()
src_language = result.get("language", "en")
print(f"üìù Idioma detectado: {src_language}")
print(f"üìù Transcri√ß√£o: {transcript}")

# =========================
# 7Ô∏è‚É£ Traduzir para portugu√™s
# =========================
from transformers import MBartForConditionalGeneration, MBart50TokenizerFast

# Mapa de c√≥digos Whisper ‚Üí mBART
LANG_MAP = {
    "en": "en_XX", "es": "es_XX", "fr": "fr_XX", "de": "de_DE",
    "it": "it_IT", "ja": "ja_XX", "ko": "ko_KR", "zh": "zh_CN",
    "ru": "ru_RU", "ar": "ar_AR", "pt": "pt_XX",
}
src_lang_mbart = LANG_MAP.get(src_language, "en_XX")

print(f"üåê Traduzindo de {src_lang_mbart} para pt_XX...")
translator_name = "facebook/mbart-large-50-many-to-many-mmt"
tokenizer_t = MBart50TokenizerFast.from_pretrained(translator_name)
translator  = MBartForConditionalGeneration.from_pretrained(translator_name)

tokenizer_t.src_lang = src_lang_mbart
encoded = tokenizer_t(transcript, return_tensors="pt", max_length=1024, truncation=True)
gen = translator.generate(
    **encoded,
    forced_bos_token_id=tokenizer_t.lang_code_to_id["pt_XX"],
    max_length=1024,
)
translated_text = tokenizer_t.decode(gen[0], skip_special_tokens=True)
print(f"üåê Tradu√ß√£o: {translated_text}")

# =========================
# 8Ô∏è‚É£ Sintetizar voz clonada com XTTS-v2
# =========================
from TTS.api import TTS as CoquiTTS

dub_audio_file = f"{OUTPUT_DIR}/dubbed_cloned.wav"

print("üî¨ Carregando modelo XTTS-v2 para clonagem de voz...")
# XTTS-v2: suporta s√≠ntese em pt-br com clonagem zero-shot
tts = CoquiTTS("tts_models/multilingual/multi-dataset/xtts_v2")

print("üéß Sintetizando com voz clonada...")
tts.tts_to_file(
    text=translated_text,
    file_path=dub_audio_file,
    speaker_wav=clone_ref_audio,   # ‚Üê usa a voz extra√≠da do v√≠deo original
    language="pt",                  # portugu√™s
)
print(f"‚úÖ √Åudio dublado: {dub_audio_file}")

# =========================
# 9Ô∏è‚É£ Ajustar dura√ß√£o do √°udio dublado para o v√≠deo
# =========================
# Obt√©m dura√ß√£o do v√≠deo original
import json
probe = subprocess.run(
    f'ffprobe -v quiet -print_format json -show_format "{video_file}"',
    shell=True, capture_output=True, text=True
)
video_duration = float(json.loads(probe.stdout)["format"]["duration"])
print(f"‚è±Ô∏è Dura√ß√£o do v√≠deo: {video_duration:.2f}s")

# Obt√©m dura√ß√£o do √°udio dublado
probe2 = subprocess.run(
    f'ffprobe -v quiet -print_format json -show_format "{dub_audio_file}"',
    shell=True, capture_output=True, text=True
)
dub_duration = float(json.loads(probe2.stdout)["format"]["duration"])
print(f"‚è±Ô∏è Dura√ß√£o da dublagem: {dub_duration:.2f}s")

# Ajusta velocidade do √°udio se necess√°rio (max ¬±30%)
dub_audio_final = f"{OUTPUT_DIR}/dubbed_final.wav"
ratio = dub_duration / video_duration
if 0.7 <= ratio <= 1.3:
    speed = ratio  # atempo aceita 0.5‚Äì2.0
    speed = max(0.5, min(2.0, speed))
    print(f"‚ö° Ajustando velocidade: {speed:.2f}x")
    run(f'ffmpeg -y -i "{dub_audio_file}" -filter:a "atempo={speed:.4f}" "{dub_audio_final}"')
else:
    # Sem ajuste, apenas copia
    print("‚ö° Sem ajuste de velocidade necess√°rio")
    run(f'cp "{dub_audio_file}" "{dub_audio_final}"')

# =========================
# üîü Mesclar v√≠deo + √°udio dublado
# =========================
print("üéûÔ∏è Mesclando v√≠deo com √°udio dublado...")
run(
    f'ffmpeg -y -i "{video_file}" -i "{dub_audio_final}" '
    f'-c:v copy -c:a aac -b:a 192k -map 0:v:0 -map 1:a:0 '
    f'-shortest "{output_video}"'
)

print(f"\n‚úÖ V√≠deo final dublado com voz clonada:\n   {output_video}")
print("\nüí° Para reproduzir:")
print(f"   ffplay \"{output_video}\"")
