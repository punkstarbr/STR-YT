# ================= AUX =================
def find_driver():
    # Tenta localizar msedgedriver no PATH
    path = shutil.which("msedgedriver")
    if path:
        logging.info(f"âœ” Driver encontrado: {path}")
        return path

    # Se nÃ£o existir, verifica na pasta local
    local_driver = os.path.join(DRIVER_DIR, "msedgedriver")
    if os.path.exists(local_driver):
        logging.info(f"âœ” Driver local encontrado: {local_driver}")
        return local_driver

    # Baixar driver automaticamente
    try:
        logging.info("ðŸš€ Baixando Edge Driver...")
        # Descobre versÃ£o do Edge instalado
        edge_path = shutil.which("microsoft-edge") or shutil.which("edge")
        if not edge_path:
            raise RuntimeError("Microsoft Edge nÃ£o encontrado no sistema.")
        edge_version = subprocess.check_output([edge_path, "--version"], text=True).strip()
        major_version = edge_version.split()[2].split(".")[0]
        logging.info(f"VersÃ£o do Edge: {edge_version} (major: {major_version})")

        # URL oficial do driver
        url = f"https://msedgedriver.azureedge.net/{major_version}.0.0.0/edgedriver_linux64.zip"
        zip_path = os.path.join(DRIVER_DIR, "edgedriver.zip")
        urllib.request.urlretrieve(url, zip_path)
        with zipfile.ZipFile(zip_path, 'r') as zip_ref:
            zip_ref.extractall(DRIVER_DIR)
        os.remove(zip_path)
        os.chmod(local_driver, os.stat(local_driver).st_mode | stat.S_IEXEC)
        logging.info(f"âœ” Driver baixado e extraÃ­do: {local_driver}")
        return local_driver
    except Exception as e:
        logging.error(f"âœ— Falha ao baixar driver: {e}")
        return None

# ================= DRIVER =================
def setup_driver():
    driver_path = find_driver()
    if not driver_path:
        logging.error("âœ— Nenhum driver disponÃ­vel. Abortando.")
        return None

    options = EdgeOptions()
    options.use_chromium = True
    options.add_argument(f"--user-data-dir={EDGE_PROFILE_PATH}")
    options.add_argument(f"--profile-directory={EDGE_PROFILE_DIR}")
    options.add_argument("--no-sandbox")
    options.add_argument("--disable-dev-shm-usage")
    options.add_argument("--disable-gpu")
    options.add_argument("--window-size=1920,1080")
    options.add_argument("--autoplay-policy=no-user-gesture-required")
    options.add_argument("--mute-audio")
    options.set_capability("goog:loggingPrefs", {"performance": "ALL"})

    try:
        service = EdgeService(driver_path)
        driver = webdriver.Edge(service=service, options=options)
        logging.info("âœ” Edge iniciado com driver disponÃ­vel")
        return driver
    except Exception as e:
        logging.error(f"âœ— Erro ao iniciar Edge: {e}")
        logging.error(traceback.format_exc())
        return None

# ================= LOGIN CHECK =================
def is_login_required(driver):
    try:
        page_text = driver.page_source.lower()
        return any(x in page_text for x in ["faÃ§a seu login", "conteÃºdos exclusivos", "restritos a assinantes"])
    except:
        return False

# ================= M3U8 =================
def normalize(url):
    p = urlparse(url)
    return urlunparse((p.scheme, p.netloc, p.path, "", "", ""))

def extract_m3u8(driver):
    try:
        logs = driver.get_log("performance")
        urls = []
        for entry in logs:
            msg = json.loads(entry["message"])["message"]
            if msg.get("method") != "Network.requestWillBeSent": continue
            url = msg.get("params", {}).get("request", {}).get("url", "")
            if ".m3u8" not in url or "video.globo.com" not in url or "youboranqs" in url or "/live/" not in url:
                continue
            clean = normalize(url)
            if clean not in urls: urls.append(clean)
        return urls[-1] if urls else None
    except Exception as e:
        logging.error(f"âœ— Erro extraindo m3u8: {e}")
        return None

# ================= CAPTURA =================
def capture_channel(driver, name, url, max_wait=60):
    logging.info(f"Acessando {name}")
    driver.get_log("performance")
    driver.get(url)
    time.sleep(6)
    if is_login_required(driver):
        logging.info(f"âœ— {name} exige login.")
        return None
    driver.execute_script("""
        let video = document.querySelector('video');
        if (video) { video.muted = true; video.play().catch(()=>{}); }
    """)
    elapsed, interval = 0, 5
    while elapsed < max_wait:
        if is_login_required(driver):
            logging.info(f"âœ— {name} bloqueado por login.")
            return None
        m3u8 = extract_m3u8(driver)
        if m3u8:
            logging.info(f"âœ” Stream capturado: {name}")
            return m3u8
        time.sleep(interval)
        elapsed += interval
        logging.info(f"Aguardando stream... {elapsed}/{max_wait}s")
    logging.info(f"âœ— Falha ao capturar: {name}")
    return None

# ================= DESCOBRIR BBB =================
def discover_bbb(driver):
    logging.info("Abrindo Agora na TV...")
    driver.get(AGORA_NA_TV_URL)
    time.sleep(6)
    driver.execute_script("window.scrollTo(0, document.body.scrollHeight);")
    time.sleep(2)
    links = driver.find_elements(By.CSS_SELECTOR, "a[href*='/v/'], a[href*='/ao-vivo/']")
    channels, seen = [], set()
    for a in links:
        href = a.get_attribute("href")
        if not href or href in seen: continue
        seen.add(href)
        name = a.get_attribute("aria-label") or "BBB ao vivo"
        if "bbb" in name.lower(): channels.append((name.strip(), href))
    logging.info(f"âœ“ BBB encontrados: {len(channels)}")
    return channels

# ================= NOME ARQUIVO =================
def generate_filename(channel_name):
    now = datetime.now(pytz.timezone("America/Sao_Paulo"))
    return now.strftime("%m%d_%H%M%S_") + channel_name.upper().replace(" ", "_") + "_" + str(now.year) + ".mp4"

# ================= SALVAR M3U =================
def save_m3u(globo_m3u8, bbb_list):
    if not globo_m3u8 and not bbb_list: return
    with open(M3U_FILE, "w", encoding="utf-8") as f:
        f.write("#EXTM3U\n")
        if globo_m3u8:
            f.write('#EXTINF:-1 group-title="GLOBO AO VIVO",Globo Internacional\n')
            f.write(globo_m3u8 + "\n")
        for name, url in bbb_list:
            f.write(f'#EXTINF:-1 group-title="Reality Shows Live",{name}\n')
            f.write(url + "\n")
    logging.info(f"âœ” M3U salvo: {M3U_FILE}")

# ================= GRAVAÃ‡ÃƒO =================
def record_stream(m3u8_url, output_file, duration=240):
    logging.info(f"Iniciando gravaÃ§Ã£o para {m3u8_url}...")
    command = ["ffmpeg", "-i", m3u8_url, "-t", str(duration), "-c", "copy", "-f", "mp4", "-y", output_file]
    subprocess.run(command)

def record_all_streams(bbb_streams, globo_m3u8):
    threads = []
    if globo_m3u8:
        output = os.path.join(OUTPUT_DIR, generate_filename("Globo Internacional"))
        t = Thread(target=record_stream, args=(globo_m3u8, output)); threads.append(t); t.start()
    for name, m3u8 in bbb_streams:
        output = os.path.join(OUTPUT_DIR, generate_filename(name))
        t = Thread(target=record_stream, args=(m3u8, output)); threads.append(t); t.start()
    for t in threads: t.join()
    logging.info("âœ” Todos os streams gravados!")

# ================= MAIN =================
def main():
    logging.info("="*60)
    logging.info("INICIANDO COLETOR GLOBOPLAY EDGE UBUNTU (AUTO DRIVER)")
    logging.info("="*60)
    while True:
        driver = setup_driver()
        if not driver:
            logging.info("Tentando novamente em 10s...")
            time.sleep(10)
            continue
        globo_m3u8 = capture_channel(driver, "Globo Internacional", GLOBO_INTERNACIONAL_URL)
        bbb_channels = discover_bbb(driver)
        bbb_streams = []
        for name, url in bbb_channels:
            m3u8 = capture_channel(driver, name, url)
            if m3u8: bbb_streams.append((name, m3u8))
        save_m3u(globo_m3u8, bbb_streams)
        driver.quit()
        record_all_streams(bbb_streams, globo_m3u8)
        logging.info("Aguardando prÃ³xima execuÃ§Ã£o...")
        time.sleep(60)

if __name__ == "__main__":
    main()
