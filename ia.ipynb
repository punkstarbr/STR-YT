from google.colab import drive
drive.mount('/content/drive')

import requests
import os
import subprocess
from urllib.parse import urlparse


DETAILS_URL = "https://archive.org/details/WCAU_20150521_110000_Today"

DRIVE_BASE_PATH = "/content/drive/MyDrive"


def extract_identifier(details_url: str) -> str:
    parsed = urlparse(details_url)
    path = parsed.path.strip("/")
    if not path.startswith("details/"):
        raise ValueError("URL inválida: não é uma página /details/ do Archive.org")
    identifier = path.replace("details/", "").split("/")[0]
    return identifier


def find_subtitle_file(identifier: str) -> str | None:
    """
    Tenta encontrar um arquivo de legenda (.srt, .vtt) no Archive.org para o identifier.
    Retorna a URL do primeiro formato encontrado, ou None se não encontrar.
    """
    print("\nProcurando arquivo de legenda no Archive.org...")
    metadata_url = f"https://archive.org/metadata/{identifier}"
    
    try:
        r = requests.get(metadata_url, timeout=15)
        r.raise_for_status()
        data = r.json()
        files = data.get("files", [])
        
        # Prioridade: .srt > .vtt > .cc.srt > outros
        subtitle_extensions = [".srt", ".vtt", ".cc.srt", ".en.srt", ".en.vtt"]
        
        for ext in subtitle_extensions:
            for f in files:
                name = f.get("name", "")
                if name.lower().endswith(ext):
                    url = f"https://archive.org/download/{identifier}/{name}"
                    print(f"  -> Legenda encontrada: {name}")
                    return url, name
                    
    except Exception as e:
        print(f"  -> Erro ao buscar metadados: {e}")
    
    print("  -> Nenhuma legenda encontrada no Archive.org.")
    return None, None


def download_subtitle(subtitle_url: str, output_path: str) -> bool:
    """Faz o download do arquivo de legenda."""
    try:
        r = requests.get(subtitle_url, timeout=30)
        r.raise_for_status()
        with open(output_path, "wb") as f:
            f.write(r.content)
        print(f"  -> Legenda baixada: {output_path}")
        return True
    except Exception as e:
        print(f"  -> Erro ao baixar legenda: {e}")
        return False


def embed_subtitles(video_path: str, subtitle_path: str, output_path: str) -> bool:
    """
    Usa ffmpeg para embutir legendas diretamente no vídeo (burned-in/hardcoded).
    Isso renderiza as legendas como parte da imagem do vídeo.
    """
    print(f"\nEmbutindo legendas no vídeo...")
    print(f"  Vídeo: {video_path}")
    print(f"  Legenda: {subtitle_path}")
    print(f"  Saída: {output_path}")

    # Escapar o caminho da legenda para o filtro do ffmpeg
    # Necessário especialmente em caminhos com espaços ou caracteres especiais
    escaped_subtitle = subtitle_path.replace("\\", "/").replace(":", "\\:")

    result = subprocess.run(
        [
            "ffmpeg",
            "-i", video_path,
            "-vf", f"subtitles='{escaped_subtitle}'",
            "-c:a", "copy",           # Mantém o áudio sem recodificar
            "-c:v", "libx264",        # Recodifica vídeo para embutir legendas
            "-crf", "18",             # Qualidade alta (menor = melhor, 18 é quase sem perda)
            "-preset", "fast",        # Velocidade de codificação
            output_path,
            "-y"
        ],
        capture_output=True,
        text=True
    )

    if result.returncode == 0:
        print(f"  -> Vídeo com legendas criado: {output_path}")
        return True
    else:
        print("  -> Erro ao embutir legendas:")
        print(result.stderr[-2000:])  # Últimas 2000 chars do log de erro
        return False


def download_full_video(details_url: str):
    identifier = extract_identifier(details_url)

    print("Iniciando download")
    print(f"URL: {details_url}")
    print(f"Identifier detectado: {identifier}")

    base_url = f"https://archive.org/download/{identifier}/{identifier}.mp4"

    output_dir = os.path.join(DRIVE_BASE_PATH, f"temp_{identifier}")
    os.makedirs(output_dir, exist_ok=True)

    segment_files = []
    minute = 0

    while True:
        start = minute * 60
        end = (minute + 1) * 60
        segment_file = os.path.join(output_dir, f"seg_{minute:03d}.mp4")
        segment_url = f"{base_url}?t={start}/{end}"

        print(f"  -> Baixando minuto {minute + 1}...", end="\r")

        try:
            r = requests.get(segment_url, stream=True, timeout=30)

            if r.status_code == 404:
                print(f"\nFim do vídeo detectado no minuto {minute}.")
                break

            r.raise_for_status()

            with open(segment_file, "wb") as f:
                for chunk in r.iter_content(chunk_size=8192):
                    if chunk:
                        f.write(chunk)

            segment_files.append(segment_file)
            minute += 1

        except Exception as e:
            print(f"\nErro no minuto {minute}: {e}")
            break

    if not segment_files:
        print("Nenhum segmento foi baixado.")
        return

    list_file = os.path.join(output_dir, "list.txt")
    with open(list_file, "w") as f:
        for seg in segment_files:
            f.write(f"file '{seg}'\n")

    # --- Vídeo 1: Sem legendas (original) ---
    final_name = os.path.join(DRIVE_BASE_PATH, f"{identifier}_completo.mp4")
    print(f"\nUnindo {len(segment_files)} segmentos...")

    result = subprocess.run(
        [
            "ffmpeg",
            "-f", "concat",
            "-safe", "0",
            "-i", list_file,
            "-c", "copy",
            final_name,
            "-y"
        ],
        capture_output=True,
        text=True
    )

    if result.returncode == 0:
        print(f"✅ Vídeo completo (sem legenda): {final_name}")
    else:
        print("Erro ao unir os segmentos:")
        print(result.stderr)
        return  # Aborta se o vídeo base falhou

    # --- Vídeo 2: Com legendas embutidas ---
    subtitle_url, subtitle_filename = find_subtitle_file(identifier)

    if subtitle_url:
        # Define extensão com base no arquivo encontrado
        ext = os.path.splitext(subtitle_filename)[1]
        subtitle_local = os.path.join(output_dir, f"legenda{ext}")

        if download_subtitle(subtitle_url, subtitle_local):
            final_name_sub = os.path.join(DRIVE_BASE_PATH, f"{identifier}_completo_legendado.mp4")
            success = embed_subtitles(final_name, subtitle_local, final_name_sub)
            if success:
                print(f"✅ Vídeo com legenda embutida: {final_name_sub}")
            else:
                print("⚠️  Falha ao gerar o vídeo legendado.")
        else:
            print("⚠️  Não foi possível baixar a legenda. Vídeo legendado não gerado.")
    else:
        print("\n⚠️  Legenda não disponível para este vídeo no Archive.org.")
        print("    Para embutir legendas manualmente, forneça um arquivo .srt e use:")
        print(f"    ffmpeg -i '{final_name}' -vf \"subtitles='legenda.srt'\" -c:a copy '{identifier}_legendado.mp4'")


if __name__ == "__main__":
    download_full_video(DETAILS_URL)
