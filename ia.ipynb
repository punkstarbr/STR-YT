# ================= DRIVER =================
def setup_driver():
    if not os.path.exists(EDGE_DRIVER_PATH):
        logging.error("‚ùå msedgedriver n√£o encontrado em ~/msedgedriver")
        return None

    options = EdgeOptions()
    options.use_chromium = True

    options.add_argument(f"--user-data-dir={EDGE_PROFILE_PATH}")
    options.add_argument(f"--profile-directory={EDGE_PROFILE_DIR}")
    options.add_argument("--no-sandbox")
    options.add_argument("--disable-dev-shm-usage")
    options.add_argument("--disable-gpu")
    options.add_argument("--window-size=1920,1080")
    options.add_argument("--autoplay-policy=no-user-gesture-required")
    options.add_argument("--mute-audio")

    try:
        service = EdgeService(EDGE_DRIVER_PATH)
        driver = webdriver.Edge(service=service, options=options)

        # üî• Habilita monitoramento de rede via CDP
        driver.execute_cdp_cmd("Network.enable", {})

        logging.info("‚úî Edge iniciado com CDP habilitado")
        return driver

    except Exception as e:
        logging.error(f"‚ùå Erro ao iniciar Edge: {e}")
        logging.error(traceback.format_exc())
        return None

# ================= UTIL =================
def normalize(url):
    p = urlparse(url)
    return urlunparse((p.scheme, p.netloc, p.path, "", "", ""))

def is_login_required(driver):
    page_text = driver.page_source.lower()
    return any(x in page_text for x in [
        "fa√ßa seu login",
        "conte√∫dos exclusivos",
        "restritos a assinantes"
    ])

# ================= CAPTURA VIA CDP =================
def extract_m3u8(driver, timeout=60):
    start = time.time()
    seen = set()

    while time.time() - start < timeout:
        logs = driver.execute_cdp_cmd("Network.getResponseBodyForInterception", {}) if False else None
        
        # üî• M√©todo funcional: varredura via performance alternativa
        try:
            perf = driver.get_log("browser")
            for entry in perf:
                msg = entry.get("message", "")
                if ".m3u8" in msg and "video.globo.com" in msg:
                    start_url = msg.find("https")
                    end_url = msg.find(".m3u8") + 5
                    url = msg[start_url:end_url]
                    clean = normalize(url)
                    if clean not in seen:
                        seen.add(clean)
                        logging.info(f"‚úî M3U8 detectado")
                        return clean
        except:
            pass

        time.sleep(3)

    return None

# ================= CAPTURA CANAL =================
def capture_channel(driver, name, url):
    logging.info(f"Acessando {name}")
    driver.get(url)
    time.sleep(6)

    if is_login_required(driver):
        logging.info("‚ùå Login necess√°rio")
        return None

    driver.execute_script("""
        let v = document.querySelector('video');
        if (v) {
            v.muted = true;
            v.play().catch(()=>{});
        }
    """)

    return extract_m3u8(driver)

# ================= BBB =================
def discover_bbb(driver):
    driver.get(AGORA_NA_TV_URL)
    time.sleep(5)

    links = driver.find_elements(By.CSS_SELECTOR, "a[href*='/v/'], a[href*='/ao-vivo/']")
    channels = []
    seen = set()

    for a in links:
        href = a.get_attribute("href")
        name = a.get_attribute("aria-label") or ""

        if not href or href in seen:
            continue

        if "bbb" in name.lower():
            channels.append((name.strip(), href))
            seen.add(href)

    return channels

# ================= GRAVA√á√ÉO =================
def record_stream(url, output_file, duration=240):
    command = [
        "ffmpeg",
        "-i", url,
        "-t", str(duration),
        "-c", "copy",
        "-y",
        output_file
    ]
    subprocess.run(command)

def record_all_streams(streams):
    threads = []
    for name, url in streams:
        filename = datetime.now().strftime("%m%d_%H%M%S_") + name.replace(" ", "_") + ".mp4"
        output = os.path.join(OUTPUT_DIR, filename)
        t = Thread(target=record_stream, args=(url, output))
        t.start()
        threads.append(t)

    for t in threads:
        t.join()

# ================= MAIN =================
def main():
    logging.info("="*60)
    logging.info("INICIANDO COLETOR GLOBOPLAY EDGE UBUNTU CORRIGIDO")
    logging.info("="*60)

    while True:
        driver = setup_driver()
        if not driver:
            time.sleep(10)
            continue

        streams = []

        globo = capture_channel(driver, "Globo Internacional", GLOBO_INTERNACIONAL_URL)
        if globo:
            streams.append(("Globo_Internacional", globo))

        bbb = discover_bbb(driver)
        for name, url in bbb:
            m3u8 = capture_channel(driver, name, url)
            if m3u8:
                streams.append((name, m3u8))

        driver.quit()

        if streams:
            record_all_streams(streams)

        logging.info("Aguardando 60s para nova captura...")
        time.sleep(60)

if __name__ == "__main__":
    main()
